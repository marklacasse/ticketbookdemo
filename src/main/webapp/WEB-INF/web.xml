<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>ticketbook</display-name>

   <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>com.acme.ticketbook.ProfileController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>api</servlet-name>
        <servlet-class>com.acme.ticketbook.api.TicketAPI</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>api</servlet-name>
        <url-pattern>/api/v2/*</url-pattern>
    </servlet-mapping>
    
    <!-- Protected resources with properly configured security constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Admin Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <!-- Using omission to explicitly protect against ALL HTTP methods -->
            <http-method-omission>GET</http-method-omission>
            <http-method-omission>POST</http-method-omission>
            <http-method-omission>PUT</http-method-omission>
            <http-method-omission>DELETE</http-method-omission>
            <http-method-omission>HEAD</http-method-omission>
            <http-method-omission>OPTIONS</http-method-omission>
            <http-method-omission>TRACE</http-method-omission>
            <http-method-omission>CONNECT</http-method-omission>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Define login configuration for secure resources -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>TicketBook Secure Area</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/error.html</form-error-page>
        </form-login-config>
    </login-config>
    
    <!-- Define security roles used in the application -->
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>MANAGER</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Manager Area</web-resource-name>
            <url-pattern>/manager.jsp</url-pattern>
            <!-- Using omission to explicitly protect against ALL HTTP methods, not just GET/POST -->
            <http-method-omission>GET</http-method-omission>
            <http-method-omission>POST</http-method-omission>
            <http-method-omission>PUT</http-method-omission>
            <http-method-omission>DELETE</http-method-omission>
            <http-method-omission>HEAD</http-method-omission>
            <http-method-omission>OPTIONS</http-method-omission>
            <http-method-omission>TRACE</http-method-omission>
            <http-method-omission>CONNECT</http-method-omission>
        </web-resource-collection>
        <auth-constraint>
            <role-name>MANAGER</role-name>
        </auth-constraint>
    </security-constraint>
    
    <!-- Security constraint for sensitive JSP files -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/cmd.jsp</url-pattern>
            <url-pattern>/xxe.jsp</url-pattern>
            <url-pattern>/xxe-dbf.jsp</url-pattern>
            <!-- Using omission to explicitly protect against ALL HTTP methods -->
            <http-method-omission>GET</http-method-omission>
            <http-method-omission>POST</http-method-omission>
            <http-method-omission>PUT</http-method-omission>
            <http-method-omission>DELETE</http-method-omission>
            <http-method-omission>HEAD</http-method-omission>
            <http-method-omission>OPTIONS</http-method-omission>
            <http-method-omission>TRACE</http-method-omission>
            <http-method-omission>CONNECT</http-method-omission>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
